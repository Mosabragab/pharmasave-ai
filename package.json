{
  "name": "pharmasave-ai",
  "version": "2.0.0",
  "description": "A specialized SaaS platform for Egyptian pharmacy businesses to reduce financial losses from near-expired medications",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
